<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sensio_framework_extra.translator.listener.class">Sensio\Bundle\FrameworkExtraBundle\EventListener\TranslatorListener</parameter>
    </parameters>

    <services>
        <service id="sensio_framework_extra.translator.listener" class="%sensio_framework_extra.translator.listener.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="service_container" />
        </service>
        <service id="sensio_framework_extra.translator" class="Sensio\Bundle\FrameworkExtraBundle\Translation\Translator">
            <argument type="service" id="sensio_framework_extra.translator.inner" />
            <argument type="service" id="request_stack" />
        </service>
    </services>
</container>
